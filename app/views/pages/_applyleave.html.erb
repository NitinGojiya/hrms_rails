<!-- Open the modal using ID.showModal() method -->
<button
  class="bg-white py-3 px-4 rounded-lg shadow-md text-gray-700 font-medium hover:bg-gray-200 transition duration-300"
  onclick="my_modal_2.showModal()">Apply For Leave</button>

<dialog id="my_modal_2" class="modal">
 <%= form_with(model: @leave, url: leave_submit_path, method: :post, local: true) do |form| %>
    <div class="modal-box h-full flex flex-col items-center justify-center gap-4 w-[500px]">

      <h3 class="text-lg font-bold">Leave Application</h3>

      <div class="w-full">
        <%= form.label :leavetype, class: "block mb-1" %>
        <%= form.select :leavetype, options_for_select(['sick', 'casual']), {}, class: "select w-full" %>
      </div>

      <div class="w-full">
        <%= form.label :start_date, class: "block mb-1" %>
        <%= form.date_field :start_date, class: "input w-full" %>
      </div>

      <div class="w-full">
        <%= form.label :end_date, class: "block mb-1" %>
        <%= form.date_field :end_date, class: "input w-full" %>
      </div>

      <div class="w-full">
        <%= form.label :subject, class: "block mb-1" %>
        <%= form.text_field :subject, placeholder: "Subject", class: "input input-neutral w-full" %>
      </div>

      <div class="w-full">
        <%= form.label :description, class: "block mb-1" %>
        <%= form.text_area :description, placeholder: "Description", class: "textarea w-full" %>
      </div>

      <div class="w-full">
        <%= form.submit 'Apply', class: "btn btn-success w-full" %>
      </div>

    </div>

  <% end %>
<div>
         <form method="dialog">
          <button class="btn btn-warning ">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
        </button>
      </form>
      </div>

</dialog>
