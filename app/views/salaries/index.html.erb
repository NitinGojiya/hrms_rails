<%=render partial:'shared/usernav'%>
<div class="  h-screen">
    <div class="max-w-7xl mx-auto mt-5 p-5">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Payroll<%=@user.email_address%></h1>

        <!-- Profile Section -->
        <div class="bg-blue-800 text-white p-6 rounded-lg shadow-md flex items-center justify-between relative overflow-hidden mb-8">
            <div class="flex items-center">

                <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-3 gap-5">
                <div>
                <select name="year" class="input border px-3 py-2 rounded-lg text-black">
                 <% (2000..Date.today.year).to_a.reverse.each do |year| %>
                <option value="<%= year %>"><%= year %></option>
                <% end %>
                </select>
                </div>

                <select name="month" class="input border px-3 py-2 rounded-lg text-black">
                 <% (1..12).to_a.each do |month| %>
                <option value="<%= month %>"><%= month %></option>
                <% end %>
                </select>
                <button class="bg-white py-3 px-4 rounded-lg shadow-md text-gray-700 font-medium hover:bg-gray-200 transition duration-300">
                    View Payslip
                </button>
            </div>
            </div>
        </div>
        <div>
            <%=render 'salaryslip' ,user:@user%>
        </div>
</div>
</div>
