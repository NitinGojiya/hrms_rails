
<%=render 'shared/usernav'%>
<div class="hero bg-base-200 min-h-screen">
    <div class="hero-content flex-col lg:flex-row">
        <img src="https://img.freepik.com/free-photo/business-people-blue-background_53876-103956.jpg?ga=GA1.1.1550118117.1750054669&semt=ais_hybrid&w=740"
            class="max-w-sm rounded-lg shadow-2xl" />

            <div>
                <h1 class="text-5xl font-bold">HR Management Platform</h1>
                <h6 class="text-2xl ">Register Your Account</h6>
            <%=form_with(model: @user, local: true) do |form|%>
                <div class="flex flex-col items-center">
                <div class="flex gap-2">
                    <div>
                    <fieldset class="fieldset">
                        <legend class="fieldset-legend">First Name</legend>
                        <!-- <input type="text" class="input input-info" placeholder="Type here" /> -->
                        <%= form.text_field :email_address, class: "input input-info" ,placeholder: "Enter your email address" %>
                    </fieldset>
                    </div>
                    <div>
                    <fieldset class="fieldset">
                        <legend class="fieldset-legend">Last Name</legend>
                        <!-- <input type="text" class="input input-info" placeholder="Type here" /> -->
                        <%= form.text_field :password, class: "input input-info" ,placeholder: "Enter your password" %>
                    </fieldset>
                     </div>
                </div>
                <div class="flex gap-2">
                    <div>
                    <fieldset class="fieldset">
                        <legend class="fieldset-legend">Email Address</legend>
                        <input type="text" class="input input-info" placeholder="Type here" />
                    </fieldset>
                    </div>
                    <div>
                    <fieldset class="fieldset">
                        <legend class="fieldset-legend">Phone Number</legend>
                        <input type="text" class="input input-info" placeholder="Type here" />
                    </fieldset>
                     </div>
                </div>
                <div class="flex gap-2">
                    <div>
                    <fieldset class="fieldset">
                        <legend class="fieldset-legend">Password</legend>
                        <input type="text" class="input input-info" placeholder="Type here" />
                    </fieldset>
                    </div>
                    <div>
                    <fieldset class="fieldset">
                        <legend class="fieldset-legend">Confirm Password</legend>
                        <input type="text" class="input input-info" placeholder="Type here" />
                    </fieldset>
                     </div>
                </div>
                <div class="flex gap-5">
                    <div> <%= form.submit "Create Account", class: "btn btn-success" %></div>
                  <div><%= link_to "Login","/session/new" , class: "btn btn-primary" %></div>
                </div>
                <div>

                </div>

            </div>
            <%end%>
        </div>
    </div>
</div>