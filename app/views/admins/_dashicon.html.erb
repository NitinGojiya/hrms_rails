                <div class="text-4xl font-bold">4</div>
                <div class="text-lg">Messages</div>
            </div>

            <!-- Jobs Card -->
            <div class="flex flex-col items-center justify-center p-6 bg-blue-700 text-white rounded-lg shadow-md">
                <div class="mb-2">
                    <!-- SVG for Jobs Icon (Briefcase) -->
