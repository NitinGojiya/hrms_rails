<header class="bg-white shadow-sm h-16 flex items-center px-6 sticky top-0 z-10 w-[1300px]">
        <h1 class="text-2xl font-semibold text-gray-800">Dashboard</h1>
    </header>

    <!-- Main Content Area - Scrollable -->
    <div class="scrollable-content p-6" style=" overflow-y: auto;height: calc(100vh - 64px);">
