<div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-md">
     <%= form_with(model: @task, url: taskcreate_path, method: :post, local: true) do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Title</label>
             <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 focus:outline-none bg-blue-50" ,id:"title" %>
           <% if @task.errors[:title].any? %>
            <p>Errors</p>
           <% end %>
            </div>


        <div class="md:col-span-2">
            <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>

            <%= form.text_area :description, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 focus:outline-none resize-y bg-blue-50" ,id:"description" %>

        </div>

        <div class="md:col-span-2">
            <label for="employees" class="block text-sm font-medium text-gray-700 mb-1">Employees</label>
            <div class="relative">
             <%= form.select "assigned_user_id",
                         options_for_select(
                  @employees
                    .select { |e| e.profile.present? }
                    .map { |e| ["#{e.profile.employee_name} (#{e.profile.job_title})", e.id] }
                     ),
                    {prompt: "Select an employee"},
                    class: "w-full px-4 py-2 border border-gray-300 rounded-lg appearance-none focus:ring-blue-500 focus:border-blue-500 focus:outline-none pr-8 bg-blue-50" %>

                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3 text-gray-700">
                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 6.071 6.9l-1.414 1.414z"/></svg>
                </div>
            </div>
        </div>
        <!-- project select -->

        <div class="md:col-span-2">
            <label for="employees" class="block text-sm font-medium text-gray-700 mb-1">Projects</label>
            <div class="relative">
                <%= form.select :project_id,
                @projects.map { |p| ["#{p.p_name} (#{p.tech})", p.id] },
                { prompt: "Select a Project" },
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg appearance-none focus:ring-blue-500 focus:border-blue-500 focus:outline-none pr-8 bg-blue-50" %>

                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3 text-gray-700">
                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 6.071 6.9l-1.414 1.414z"/></svg>
                </div>
            </div>
        </div>

    </div>

    <div>
            <label for="start-date" class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
            <div class="relative">
                <%= form.date_field :start_date, class:"w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 focus:outline-none appearance-none bg-blue-50",id:"start-date"%>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3 text-gray-700">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                </div>
            </div>
        </div>

        <div>
            <label for="end-date" class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
            <div class="relative">
                <%= form.date_field :end_date, class:"w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 focus:outline-none appearance-none bg-blue-50",id:"end-date"%>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3 text-gray-700">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                </div>
            </div>
        </div>

    <div class="mt-8 flex justify-start space-x-4">
        <%=form.submit class:"px-6 py-2 bg-green-700 text-white font-semibold rounded-lg hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"%>
    </div>
    <%end%>
</div>