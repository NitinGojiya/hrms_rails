<div class="w-[1300px] mx-auto bg-white rounded-lg shadow-md p-6">
        <!-- Header Section -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800 mb-4 md:mb-0">
                <span>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-12">
                <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                </svg>
                Employee Record
                </span>

            </h1>
            <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-4 w-full md:w-auto">
                <button class="bg-white border border-gray-300 text-gray-700 px-5 py-2 rounded-lg flex items-center justify-center text-sm font-medium shadow-sm hover:bg-gray-50 transition-colors">
                    <i class="fas fa-filter mr-2"></i> Filter
                </button>
                <button class="bg-green-600 text-white px-5 py-2 rounded-lg flex items-center justify-center text-sm font-medium shadow-sm hover:bg-green-700 transition-colors">
                    <i class="fas fa-download mr-2"></i> Export
                </button>
            </div>
        </div>

        <!-- Employee Table -->
        <div class="table-responsive">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50 rounded-lg">
                    <tr>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tl-lg">Email Address</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tl-lg">Name(s)</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dept</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Job Title</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Start Date</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone Number</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Account Number</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tr-lg">Total Leaves</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tr-lg">Reaming Leaves </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <!-- Employee Row  -->
                    <%= render partial: 'employeerecordrow', collection: @employees, as: :employee %>
                    <!-- Employee Row  -->
                </tbody>
            </table>
        </div>
    </div>
