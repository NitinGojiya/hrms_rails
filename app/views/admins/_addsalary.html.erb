<div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-md">
     <%= form_with(model: @salary, url: salarycreate_path, method: :post, local: true) do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

    <!-- employee select -->
        <div class="md:col-span-2">
            <label for="employees" class="block text-sm font-medium text-gray-700 mb-1">Employees</label>
            <div class="relative">
             <%= form.select "user_id",
                         options_for_select(
                  @employees
                    .select { |e| e.profile.present? }
                    .map { |e| ["#{e.profile.employee_name} (#{e.profile.job_title})", e.id] }
                     ),
                    {prompt: "Select an employee"},
                    class: "w-full px-4 py-2 border border-gray-300 rounded-lg appearance-none focus:ring-blue-500 focus:border-blue-500 focus:outline-none pr-8 bg-blue-50" %>

                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3 text-gray-700">
                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 6.071 6.9l-1.414 1.414z"/></svg>
                </div>
            </div>
        </div>

        <div>
            <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Salary</label>
             <%= form.text_field :salary, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 focus:outline-none bg-blue-50" ,id:"title" %>
        </div>




    </div>




    <div class="mt-8 flex justify-start space-x-4">
        <%=form.submit class:"px-6 py-2 bg-green-700 text-white font-semibold rounded-lg hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"%>

    </div>
    <%end%>
</div>