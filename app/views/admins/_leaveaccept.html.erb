<div class="overflow-x-auto text-2xl">
  <table class="table">
    <!-- head -->
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Leave Type</th>
        <th>Leave Subject</th>
        <th>Description</th>
        <th>To</th>
        <th>From</th>
        <th>Days</th>
      </tr>
    </thead>
    <tbody>
      <!-- row 1 -->
  <%@leaves_accept.each_with_index do |leave,index|%>
    <tr class="bg-base-200">
        <th><%=index+1%></th>
        <td><%=leave.user.profile.employee_name%></td>
        <td><%=leave.leavetype%></td>
        <td><%=leave.subject%></td>
        <td><%=leave.description%></td>
        <td><%=leave.start_date.strftime('%d-%m-%y')%></td>
        <td><%=leave.end_date.strftime('%d-%m-%y')%></td>
        <td><%=(leave.end_date - leave.start_date).to_i%></td>
    </tr>
  <%end%>

    </tbody>
  </table>
</div>