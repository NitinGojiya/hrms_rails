<div class="w-[1300px] mx-auto bg-white rounded-lg shadow-md p-6">
        <!-- Header Section -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800 mb-4 md:mb-0">Employee Management</h1>
            <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-4 w-full md:w-auto">
                <button class="bg-white border border-gray-300 text-gray-700 px-5 py-2 rounded-lg flex items-center justify-center text-sm font-medium shadow-sm hover:bg-gray-50 transition-colors">
                    <i class="fas fa-filter mr-2"></i> Filter
                </button>
                <button class="bg-green-600 text-white px-5 py-2 rounded-lg flex items-center justify-center text-sm font-medium shadow-sm hover:bg-green-700 transition-colors">
                    <i class="fas fa-download mr-2"></i> Export
                </button>
            </div>
        </div>

        <!-- Employee Table -->
        <div class="table-responsive">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50 rounded-lg">
                    <tr>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tl-lg">Email Address</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tl-lg">Name(s)</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dept</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Job Title</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Start Date</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Gender</th>
                        <th scope="col" class="table-cell-padding text-left text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tr-lg">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <!-- Employee Row  -->
                    <%= render partial: 'employeerow', collection: @employees, as: :employee %>
                    <!-- Employee Row  -->
                </tbody>
            </table>
        </div>
    </div>
